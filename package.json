{
  "name": "axrone",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run build --stream",
    "clean": "lerna run clean && lerna clean --yes && rimraf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "lerna run lint --parallel --stream",
    "lint:fix": "lerna run lint:fix --parallel --stream",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:browser": "vitest --config vitest.config.browser.ts",
    "test:webgl": "playwright test --config playwright.config.ts",
    "test:coverage": "vitest --coverage",
    "test:all": "npm run test && npm run test:browser && npm run test:webgl",
    "docs": "typedoc"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitest/browser": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "happy-dom": "^15.11.7",
    "husky": "^9.1.7",
    "lerna": "^8.2.2",
    "lint-staged": "^15.5.1",
    "playwright": "^1.48.0",
    "prettier": "^3.5.3",
    "punycode2": "^1.0.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.40.0",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "tsx": "^4.20.3",
    "typedoc": "^0.28.2",
    "typedoc-plugin-markdown": "^4.6.2",
    "typescript": "^5.8.3",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  }
}
